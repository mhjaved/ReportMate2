<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/demo_description"
                    android:src="@drawable/ic_arrow_back" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_12"
                    android:text="@string/crm_test"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/heading_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ivBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivBack"
                    app:layout_constraintTop_toTopOf="@+id/ivBack" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llHeading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/circuit_breaker_name"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <EditText
                    android:id="@+id/etCircuitBreakerName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/space_8"
                    android:autofillHints=""
                    android:background="@drawable/bg_edit_text"
                    android:drawableStart="@drawable/ic_demo_icon_2"
                    android:drawablePadding="10dp"
                    android:hint="@string/enter_here"
                    android:inputType="text"
                    android:paddingStart="@dimen/space_12"
                    android:paddingEnd="@dimen/space_8"
                    android:textColor="@color/text_black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelProject" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/auto_filled_confirm_the_information"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/llOwId" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llHeading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ckt_breaker_size"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <EditText
                    android:id="@+id/etCircuitBreakerSize"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/space_8"
                    android:autofillHints=""
                    android:background="@drawable/bg_edit_text"
                    android:drawableStart="@drawable/ic_demo_icon_2"
                    android:drawablePadding="10dp"
                    android:hint="@string/enter_here"
                    android:inputType="text"
                    android:textColor="@color/text_black"
                    android:paddingStart="@dimen/space_12"
                    android:paddingEnd="@dimen/space_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelProject" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/auto_filled_confirm_the_information"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/llOwId" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crm_test_connection_img"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/camera_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/space_8"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/img_cameraConnection"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/ic_camera_short"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="6dp"
                        android:visibility="visible"
                        android:contentDescription="@string/demo_description"
                        android:foregroundGravity="center"
                        />

                    <ImageView
                        android:id="@+id/ivShowImageConnection"
                        android:layout_width="400dp"
                        android:layout_height="300dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_demo_temp"
                        android:layout_marginTop="@dimen/space_8"
                        android:visibility="gone"
                        android:background="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="@string/demo_description"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/click_the_icon_to_open_your_camera"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:text="CRM Test Result Img"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/camera_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/space_8"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/img_cameraResult"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/ic_camera_short"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="6dp"
                        android:visibility="visible"
                        android:contentDescription="@string/demo_description"
                        android:foregroundGravity="center"
                        />

                    <ImageView
                        android:id="@+id/ivShowImageResult"
                        android:layout_width="400dp"
                        android:layout_height="300dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_demo_temp"
                        android:layout_marginTop="@dimen/space_8"
                        android:visibility="gone"
                        android:background="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="@string/demo_description"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/click_the_icon_to_open_your_camera"
                    android:textColor="#888888"
                    android:textSize="12sp" />


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_16"
                >


                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R-RES"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    android:id="@+id/et1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/space_8"
                    android:autofillHints=""
                    android:background="@drawable/bg_edit_text"
                    android:drawableStart="@drawable/ic_demo_icon_2"
                    android:drawablePadding="10dp"
                    android:hint="@string/enter_here"
                    android:inputType="text"
                    android:paddingStart="@dimen/space_12"
                    android:paddingEnd="@dimen/space_8"
                    android:textColor="@color/text_black"
                    app:layout_constraintEnd_toStartOf="@+id/sp1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv1"
                    android:layout_marginEnd="@dimen/space_8"
                    />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/auto_filled_confirm_the_information"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/et1"
                    app:layout_constraintStart_toStartOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp1"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toTopOf="@+id/et1"
                    app:layout_constraintBottom_toBottomOf="@+id/et1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:popupBackground="@color/white"
                    android:background="@drawable/bg_edit_text"
                    android:foregroundTint="@color/text_black"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintTop_toTopOf="@+id/sp1"
                    app:layout_constraintBottom_toBottomOf="@+id/sp1"
                    app:layout_constraintEnd_toEndOf="@+id/sp1"
                    app:tint="@color/text_black"
                    android:layout_marginEnd="@dimen/space_8"
                    android:contentDescription="@string/demo_description"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_16"
                >


                <TextView
                    android:id="@+id/tv11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/circuit_breaker_name"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    android:id="@+id/et2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/space_8"
                    android:autofillHints=""
                    android:background="@drawable/bg_edit_text"
                    android:drawableStart="@drawable/ic_demo_icon_2"
                    android:drawablePadding="10dp"
                    android:hint="@string/enter_here"
                    android:inputType="text"
                    android:paddingStart="@dimen/space_12"
                    android:paddingEnd="@dimen/space_8"
                    android:textColor="@color/text_black"
                    app:layout_constraintEnd_toStartOf="@+id/sp2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv11"
                    android:layout_marginEnd="@dimen/space_8"
                    />

                <TextView
                    android:id="@+id/tv22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/auto_filled_confirm_the_information"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/et2"
                    app:layout_constraintStart_toStartOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp2"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toTopOf="@+id/et2"
                    app:layout_constraintBottom_toBottomOf="@+id/et2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:popupBackground="@color/white"
                    android:background="@drawable/bg_edit_text"
                    android:foregroundTint="@color/text_black"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintTop_toTopOf="@+id/sp2"
                    app:layout_constraintBottom_toBottomOf="@+id/sp2"
                    app:layout_constraintEnd_toEndOf="@+id/sp2"
                    app:tint="@color/text_black"
                    android:layout_marginEnd="@dimen/space_8"
                    android:contentDescription="@string/demo_description"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_16"
                >


                <TextView
                    android:id="@+id/tv13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/circuit_breaker_name"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <EditText
                    android:id="@+id/et3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/space_8"
                    android:autofillHints=""
                    android:background="@drawable/bg_edit_text"
                    android:drawableStart="@drawable/ic_demo_icon_2"
                    android:drawablePadding="10dp"
                    android:hint="@string/enter_here"
                    android:inputType="text"
                    android:paddingStart="@dimen/space_12"
                    android:paddingEnd="@dimen/space_8"
                    android:textColor="@color/text_black"
                    app:layout_constraintEnd_toStartOf="@+id/sp3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv13"
                    android:layout_marginEnd="@dimen/space_8"
                    />

                <TextView
                    android:id="@+id/tv23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/auto_filled_confirm_the_information"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/et3"
                    app:layout_constraintStart_toStartOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp3"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toTopOf="@+id/et3"
                    app:layout_constraintBottom_toBottomOf="@+id/et3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:popupBackground="@color/white"
                    android:background="@drawable/bg_edit_text"
                    android:foregroundTint="@color/text_black"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintTop_toTopOf="@+id/sp3"
                    app:layout_constraintBottom_toBottomOf="@+id/sp3"
                    app:layout_constraintEnd_toEndOf="@+id/sp3"
                    app:tint="@color/text_black"
                    android:layout_marginEnd="@dimen/space_8"
                    android:contentDescription="@string/demo_description"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/bottomView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expandCircuitList" />

        </LinearLayout>


    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_16"
            android:background="@drawable/bg_button_border"
            android:backgroundTint="#1E2B39"
            android:drawableEnd="@drawable/ic_demo_icon_2"
            android:paddingHorizontal="24dp"
            android:text="@string/cancel"
            android:textColor="@color/theme_color"
            app:iconGravity="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_16"
            android:background="@drawable/bg_button_next"
            android:drawableTint="@color/text_white"
            android:text="@string/save_and_next"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>