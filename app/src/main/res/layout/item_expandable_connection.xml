<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandableSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="12dp">

    <TextView
        android:id="@+id/connectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A-G Connection"
        android:textStyle="bold"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/irTestConnectionImg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_demo_icon_2"
        android:contentDescription="IR Test Connection Image"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/irTestResultImg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_demo_icon_2"
        android:contentDescription="IR Test Result Image"
        android:scaleType="centerInside" />

    <EditText
        android:id="@+id/agValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="A-G"
        android:inputType="text"
        android:layout_marginTop="8dp" />
</LinearLayout>
