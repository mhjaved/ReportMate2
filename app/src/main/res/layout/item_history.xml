<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="@dimen/space_16"
    >


    <!-- Company Name -->
    <TextView
        android:id="@+id/tvProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Era Fashionskkkkkkkk"
        android:textColor="@color/text_black"
        android:textStyle="normal"
        android:maxLines="1"
        android:maxLength="18"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!-- Project Code -->
    <TextView
        android:id="@+id/tvProjectCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEL-SWGRTS-GD_DB_Boxdfgdsfgfgdfg"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:maxLength="18"
        android:layout_marginStart="@dimen/space_24"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/tvProjectName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/demo_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/text_black" />

</androidx.constraintlayout.widget.ConstraintLayout>