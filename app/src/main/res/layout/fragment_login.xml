<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/space_16"
    android:clickable="true"
    >

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/back_button_size"
        android:layout_height="@dimen/back_button_size"
        android:layout_marginTop="@dimen/space_16"
        android:background="@color/transparent_color"
        android:contentDescription="@string/demo_description"
        android:src="@drawable/ic_arrow_back"
        android:text="@string/bangla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- App Icon -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/space_32"
        android:contentDescription="@string/demo_description"
        android:src="@drawable/ic_logo_png"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:text="@string/log_in"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogo" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/to_your_ocr_account"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvLoginTitle"
        app:layout_constraintTop_toBottomOf="@id/tvLoginTitle" />

    <!-- Employee ID -->
    <EditText
        android:id="@+id/etEmployeeId"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginTop="24dp"
        android:autofillHints=""
        android:textColor="@color/text_black"
        android:background="@drawable/bg_edit_text"
        android:drawableStart="@drawable/ic_user"
        android:hint="@string/employee_id"
        android:inputType="text"
        android:drawablePadding="10dp"
        android:paddingStart="@dimen/space_12"
        android:paddingEnd="@dimen/space_12"
        android:drawableTint="@color/line_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle" />

    <!-- Password -->
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmployeeId"
        android:layout_marginTop="16dp"

        >

<!--        <EditText-->
<!--            android:id="@+id/etPassword"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Enter Password"-->
<!--            android:inputType="textPassword"-->
<!--            android:paddingEnd="48dp"-->
<!--            android:drawableEnd="@drawable/ic_lock_unlocked" />-->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:autofillHints=""
            android:textColor="@color/text_black"
            android:background="@drawable/bg_edit_text"
            android:drawableStart="@drawable/ic_lock_unlocked"
            android:hint="@string/enter_password"
            android:drawableTint="@color/line_gray"
            android:inputType="textPassword"
            android:paddingStart="@dimen/space_12"
            android:drawablePadding="10dp"
            android:paddingEnd="@dimen/space_12" />

        <ImageView
            android:id="@+id/ivTogglePassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_show_password"
            android:contentDescription="@string/demo_description"
            app:tint="@color/line_gray" />

    </RelativeLayout>


    <!-- Login Button -->
    <LinearLayout
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginTop="24dp"
        android:background="@color/theme_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_medium"
            android:text="@string/log_in"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="@dimen/space_12"
            android:contentDescription="@string/demo_description"
            android:rotation="180"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/text_white" />

    </LinearLayout>

    <!-- Help and Support -->

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/btnHelp"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginTop="@dimen/space_16"
        android:background="@drawable/bg_button_border"
        android:gravity="center"
        android:orientation="horizontal"
        android:textColor="@color/theme_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLogin">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="@dimen/space_12"
            android:contentDescription="@string/demo_description"
            android:src="@drawable/ic_help"
            app:tint="@color/line_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_medium"
            android:text="@string/help_amp_support"
            android:textColor="@color/theme_color"
            android:textSize="18sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/developed_by_factory_next"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        android:fontFamily="@font/barlow_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


