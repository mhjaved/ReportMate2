<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9FCFD">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Site Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Step Indicator -->
    <!-- Add   android:src="@drawable/ic_camera_short"your custom step indicator here (ImageView or CustomView) -->

    <!-- Air Temp & Humidity Img Upload Section -->

    <TextView
        android:id="@+id/camera_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/air_temp_and_humidity_img"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_camera"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:scaleType="centerInside"
        android:background="@drawable/ic_camera_short"
        app:layout_constraintTop_toBottomOf="@id/camera_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/upload_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click the icon to open your camera"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/img_camera"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Air Temp -->
    <TextView
        android:id="@+id/air_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/air_temp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toBottomOf="@id/upload_hint"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/air_temp_input"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="00"
        android:inputType="number"
        android:background="@drawable/bg_edit_text"
        app:layout_constraintTop_toBottomOf="@id/air_temp_label"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/air_temp_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â° Cel"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_edit_text"
        app:layout_constraintTop_toTopOf="@id/air_temp_input"
        app:layout_constraintStart_toEndOf="@id/air_temp_input" />

    <TextView
        android:id="@+id/air_temp_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filled from OCR. Edit if needed."
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/air_temp_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Rel. Humidity -->
    <TextView
        android:id="@+id/rel_humidity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rel. Humidity"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/air_temp_hint"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/rel_humidity_input"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="00"
        android:inputType="number"
        android:background="@drawable/bg_edit_text"
        app:layout_constraintTop_toBottomOf="@id/rel_humidity_label"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/rel_humidity_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="% Per"
        android:background="@drawable/bg_edit_text"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/rel_humidity_input"
        app:layout_constraintStart_toEndOf="@id/rel_humidity_input" />

    <TextView
        android:id="@+id/rel_humidity_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filled from OCR. Edit if needed."
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/rel_humidity_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Guidelines -->
    <TextView
        android:id="@+id/guidelines"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/guideliner_site_details"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/rel_humidity_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Save & Confirm Button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_confirm"
        android:textColor="@color/white"
        android:enabled="false"
        android:background="@drawable/bg_button_next"
        app:layout_constraintTop_toBottomOf="@id/guidelines"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
