<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FC"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/demo_description"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/general_image"
                android:textColor="@color/text_black"
                android:textSize="@dimen/heading_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ivBack"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                android:layout_marginStart="@dimen/space_12"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Step Indicator -->
            <!-- Add   android:src="@drawable/ic_camera_short"your custom step indicator here (ImageView or CustomView) -->

            <!-- Air Temp & Humidity Img Upload Section -->

            <TextView
                android:id="@+id/camera_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/air_temp_and_humidity_img"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textColor="@color/text_black"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/camera_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/space_8"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/img_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/ic_camera_short"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="6dp"
                    android:visibility="visible"
                    android:contentDescription="@string/demo_description"
                    android:foregroundGravity="center"
                    />

                <ImageView
                    android:id="@+id/ivShowImage"
                    android:layout_width="400dp"
                    android:layout_height="300dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_camera_short"
                    android:layout_marginTop="@dimen/space_8"
                    android:visibility="gone"
                    android:background="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/demo_description"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/upload_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click the icon to open your camera"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/rl"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Air Temp -->
            <TextView
                android:id="@+id/air_temp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/air_temp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textColor="@color/text_black"
                app:layout_constraintTop_toBottomOf="@id/upload_hint"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/air_temp_input"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="00"
                android:inputType="number"
                android:textColor="@color/text_black"
                android:background="@drawable/bg_edit_text"
                app:layout_constraintTop_toBottomOf="@id/air_temp_label"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/air_temp_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â° Cel"
                android:textColor="@color/text_black"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_edit_text"
                app:layout_constraintTop_toTopOf="@id/air_temp_input"
                app:layout_constraintStart_toEndOf="@id/air_temp_input" />

            <TextView
                android:id="@+id/air_temp_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filled from OCR. Edit if needed."
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/air_temp_input"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Rel. Humidity -->
            <TextView
                android:id="@+id/rel_humidity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rel. Humidity"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/air_temp_hint"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/rel_humidity_input"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="00"
                android:inputType="number"
                android:textColor="@color/text_black"
                android:background="@drawable/bg_edit_text"
                app:layout_constraintTop_toBottomOf="@id/rel_humidity_label"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rel_humidity_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="% Per"
                android:textColor="@color/text_black"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/rel_humidity_input"
                app:layout_constraintStart_toEndOf="@id/rel_humidity_input" />

            <TextView
                android:id="@+id/rel_humidity_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filled from OCR. Edit if needed."
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/rel_humidity_input"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Guidelines -->
            <TextView
                android:id="@+id/guidelines"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/guideliner_site_details"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/rel_humidity_hint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_border"
            android:backgroundTint="#1E2B39"
            android:drawableEnd="@drawable/ic_demo_icon_2"
            android:paddingHorizontal="24dp"
            android:text="@string/cancel"
            android:textColor="@color/theme_color"
            app:iconGravity="textEnd"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/space_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_16"
            android:background="@drawable/bg_button_next"
            android:text="@string/save_and_next"
            android:textStyle="bold"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="textEnd"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>